@keyframes blink {
    to {
        background-color: #ffffff;
        color: #000000;
    }
}

label:focus {
    background-color: #ffffff;
}

#keyboard-state {
    background: #97e1ad;
    color: #000000;
    padding: 0px 0px;
    margin: 0px 5px;
    min-width: 16px;
}

#keyboard-state > label {
    padding: 0px 0px;
}

#keyboard-state > label.locked {
    background: rgba(0, 0, 0, 0.2);
}
